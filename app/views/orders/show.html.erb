<div class="container mt-cart">
	<table class="table table-responsive">
		<thead class="bg-dark text-light">
				<th style="width:75%">Your order</th>
				<th style="width:10%">Price</th> 
				<th style="width:15%"></th> 
		</thead>
		<tbody>
			<% @order.items.each do |item| %>
			<tr>	
						
				<td data-th="Your order">
					<div class="row">
						<div class="col-md-2">
							<%= image_tag(item.image_url, :alt => "search") %>
						</div>
						<div class="col-md-10">
							<h4 class="nomargin">Item n°<%= item.id%></h4>
							<p><%= item.description%></p>
						</div>
					</div>
				</td>
				<td data-th="Price"><%= item.price%>€</td>
				<td class="actions" data-th="">

				 
				</td>
				
		  </tr>
		  <% end %>
		</tbody>
		<tfoot class="card-footer">
			<tr>
				<td>
					<%= link_to "Continue shopping", root_path, class: "btn btn-warning" %>
				</td>
				<td class="hidden-xs">
					<strong>Total: <%= @total_price %>€</strong>
				</td>
				<td>
					<%= render 'layouts/transform_to_order' %>
					<!-- <a class="btn btn-success btn-block" href="#">Checkout</a> -->
				</td>
			</tr>
		</tfoot>
	</table>
</div>